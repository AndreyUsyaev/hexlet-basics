postgres_db = {
  name = "{{ vault_postgres_db.name }}"
  username = "{{ vault_postgres_db.username }}"
  password = "{{ vault_postgres_db.password }}"
  username_readonly = "{{ vault_postgres_db.username_readonly }}"
}

datadog_api_key = "{{ vault_datadog_api_key }}"

environment_file = {
  SPARKPOST_SMTP_USERNAME = "{{ hexlet_basics_vault_sparkpost_smtp_username }}"
  SPARKPOST_SMTP_PASSWORD = "{{ hexlet_basics_vault_sparkpost_smtp_password }}"
  GUARDIAN_SECRET_KEY = "{{ hexlet_basics_vault_guardian_secret_key }}"

  GITHUB_CLIENT_ID = "{{ hexlet_basics_vault_github_client_id }}"
  GITHUB_CLIENT_SECRET = "{{ hexlet_basics_vault_github_client_secret }}"

  FACEBOOK_CLIENT_ID = "{{ hexlet_basics_vault_facebook_client_id }}"
  FACEBOOK_CLIENT_SECRET = "{{ hexlet_basics_vault_facebook_client_secret }}"

  GOOGLE_CLIENT_ID = "{{ hexlet_basics_vault_google_client_id }}"
  GOOGLE_CLIENT_SECRET = "{{ hexlet_basics_vault_google_client_secret }}"
  GOOGLE_TAG_MANAGER_KEY = "{{ hexlet_basics_vault_google_tag_manager_key }}"

  DATABASE_URL = "postgres://{{ vault_postgres_db.username }}:{{ vault_postgres_db.password }}@{{ vault_postgres_db.host }}:{{ vault_postgres_db.port }}/{{ vault_postgres_db.name }}"
  REDIS_URL = "redis://{{ vault_redis_db.username }}:{{ vault_redis_db.password }}@{{ vault_redis_db.host }}:{{ vault_redis_db.port }}"

  SECRET_KEY_BASE = "{{ hexlet_basics_vault_secret_key_base }}"

  SENTRY_DSN = "{{ hexlet_basics_vault_sentry_dsn }}"
  SENTRY_API_TOKEN = "{{ hexlet_basics_vault_sentry_api_token }}"

  DO_SPACES_ACCESS_ID = "{{ hexlet_basics_vault_do_spaces_access_id }}"
  DO_SPACES_SECRET_KEY = "{{ hexlet_basics_vault_do_spaces_secret_key }}"
  DO_SPACES_REGION = "{{ hexlet_basics_vault_do_spaces_region }}"
  DO_SPACES_SITEMAP_BUCKET = "{{ hexlet_basics_vault_do_spaces_sitemap_bucket }}"

  APP_HOST = "{{ app_config.host }}"
  PORT = "{{ app_config.port }}"
  NODE_ENV = "{{ app_config.node.env }}"
  RAILS_ENV = "{{ app_config.rails.env }}"
  RAILS_LOG_TO_STDOUT = "{{ app_config.rails.log_to_stdout }}"
  RAILS_SERVE_STATIC_FILES = "{{ app_config.rails.serve_static_files }}"
}
